<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AlarmBle.View.MainPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Image
            Source="{AppThemeBinding Light=empty_white.png, Dark=empty_black.png}"
            SemanticProperties.Description="Draw man confused"
            HeightRequest="200"
            HorizontalOptions="Center" />

        <Label
            Text="Alarm BLE"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Label
            Text="App Development in Progress!"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Alarm BLE App"
            FontSize="18"
            HorizontalOptions="Center" />
        <Label
            Text="But the device search and connect is working =)"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Alarm BLE App"
            FontSize="18"
            HorizontalOptions="Center"/>



    </VerticalStackLayout>

</ContentPage>
