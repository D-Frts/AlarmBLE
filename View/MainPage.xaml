<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:strings="clr-namespace:AlarmBle.Resources.Localization"
             x:Class="AlarmBle.View.MainPage"
             Title="{Static strings:AppResources.MenuItem_Home}">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Image
            Source="{AppThemeBinding Light=empty_light.png, Dark=empty_dark.png}"
            SemanticProperties.Description="Draw man confused"
            HeightRequest="200"
            HorizontalOptions="Center" />

        <Label
            Text="{Static strings:AppResources.MenuItem_Home}"
            Style="{StaticResource ExtraLargeLabel}"
            SemanticProperties.HeadingLevel="Level1"
            HorizontalOptions="Center" />

        <Label
            Text="{Static strings:AppResources.LabelText_PageDevelopmentInProgress}"
            Style="{StaticResource LargeLabel}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Alarm BLE App"            
            HorizontalOptions="Center" />




    </VerticalStackLayout>

</ContentPage>
